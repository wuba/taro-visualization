{
  "name": "taro-charts",
  "version": "1.0.5",
  "description": "Echarts for taro",
  "keywords": [
    "echarts",
    "taro",
    "react-native"
  ],
  "homepage": "https://github.com/wuba/taro-visualization/tree/main/packages/taro-charts",
  "license": "Apache-2.0",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "repository": "https://github.com/wuba/taro-visualization/tree/main/packages/taro-charts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@tarojs/components": "^3.4.12",
    "@tarojs/taro": "^3.5.7",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/three": "^0.141.0",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "@wuba/react-native-echarts": "^1.0.0",
    "echarts": "^5.4.1",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.31.11",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react": "^17.0.2",
    "typescript": "^4.9.3"
  },
  "peerDependencies": {
    "@tarojs/components": "^3.4.12",
    "@tarojs/taro": "^3.5.7",
    "@wuba/react-native-echarts": "^1.0.0",
    "echarts": "^5.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{html,css}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
